class Solution {
    int maxLength(int arr[]) {
        // code here
        int prefix = 0;
        int maxLength = 0;
        int length = 0;
    
        Map<Integer, Integer> map = new HashMap<>();
        map.put(0, -1);
        for(int i = 0 ; i < arr.length; i++ ){
            prefix = prefix + arr[i];
            
            if(map.containsKey(prefix)){
                length = i - map.get(prefix);
                maxLength = Math.max(length, maxLength);
            }else{
                map.put(prefix, i);
            }
        }
        return maxLength;
    }
}
